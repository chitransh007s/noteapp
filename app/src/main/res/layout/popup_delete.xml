<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_delete_view_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appAlpha70"
    tools:ignore="UnusedAttribute" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_24dp"
        android:layout_margin="@dimen/margin_32dp"
        app:layout_constraintVertical_bias="0.8"
        android:background="@drawable/popup_delete_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/popup_delete_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/popup_delete_title"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/appBlack"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@id/popup_delete_vertical_guideline_1"
            app:layout_constraintEnd_toEndOf="@id/popup_delete_vertical_guideline_2"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/popup_delete_view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_32dp"
            android:background="@color/appLineColor"
            app:layout_constraintTop_toBottomOf="@id/popup_delete_title"/>

        <View
            android:id="@+id/popup_delete_view_2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/appLineColor"
            app:layout_constraintStart_toStartOf="@+id/popup_delete_vertical_guideline_3"
            app:layout_constraintTop_toTopOf="@id/popup_delete_view_1"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/popup_delete_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/popup_delete_cancel"
            android:textColor="@color/appBlack"
            android:textAlignment="center"
            android:paddingTop="@dimen/padding_16dp"
            android:paddingBottom="@dimen/padding_16dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="@id/popup_delete_vertical_guideline_1"
            app:layout_constraintEnd_toEndOf="@id/popup_delete_vertical_guideline_3"
            app:layout_constraintTop_toBottomOf="@+id/popup_delete_view_1"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/popup_delete_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/popup_delete_submit"
            android:textColor="@color/appBlack"
            android:textAlignment="center"
            android:paddingTop="@dimen/padding_16dp"
            android:paddingBottom="@dimen/padding_16dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="@id/popup_delete_vertical_guideline_3"
            app:layout_constraintEnd_toEndOf="@id/popup_delete_vertical_guideline_2"
            app:layout_constraintTop_toBottomOf="@+id/popup_delete_view_1"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/popup_delete_vertical_guideline_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".07"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/popup_delete_vertical_guideline_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".93"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/popup_delete_vertical_guideline_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>